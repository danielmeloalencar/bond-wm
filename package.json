    "clean": "turbo run clean",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "3.2.5",
    "turbo": "^1.12.5",
    "typescript": "~5.4.5"
  },
  "pnpm": {
    "overrides": {
      "redux": "^5.0.0"
    }
  },
  "packageManager": "pnpm@9.6.0"
