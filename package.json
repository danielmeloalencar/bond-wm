{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "startx": "unset XDG_SEAT && Xephyr -br -ac -noreset -screen 1600x900 :1",
    "startx-multi": "unset XDG_SEAT && Xephyr -br -ac -noreset -screen 1000x700 -screen 1000x600 +xinerama :1",
    "buildold": "tsc -b ./tsconfig.json && npm run build-desktop && npm run build-frame",
    "build-desktop": "esbuild ./renderer-desktop/index.tsx --bundle --external:electron --outfile=./dist/renderer-desktop/dist.js",
    "build-frame": "esbuild ./renderer-frame/index.ts --bundle --external:electron --outfile=./dist/renderer-frame/dist.js",
    "clean": "rm -rf ./dist node_modules",
    "start": "DISPLAY=:1 electron .",
    "test": "jest",
    "lintold": "eslint .",
    "prettier": "prettier --write .",

    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "eslint": "^8.29.0",
    "prettier": "2.8.0",
    "turbo": "latest"
  },
  "packageManager": "npm@8.12.1"
}
