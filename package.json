    "build": "turbo run build",
    "clean": "turbo run clean",
    "test": "turbo run test"
  },
  "dependencies": {
    "@swc/core": "^1.3.56",
    "@swc/helpers": "^0.5.1",
    "electron": "^26.2.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "2.8.0",
    "turbo": "latest",
    "typescript": "~5.2.2"
  },
  "packageManager": "pnpm@8.2.0"
}
