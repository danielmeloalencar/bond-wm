{
  "name": "electron-wm",
  "version": "1.0.0",
  "description": "An Electron X11 window manager",
  "main": "./wm/main.js",
  "scripts": {
    "startx": "unset XDG_SEAT && Xephyr -br -ac -noreset -screen 1600x900 :1",
    "startx-multi": "unset XDG_SEAT && Xephyr -br -ac -noreset -screen 1000x700 -screen 1000x600 +xinerama :1",
    "build": "tsc -p ./tsconfig.json && npm run build-desktop && npm run build-frame",
    "build-desktop": "esbuild ./renderer-desktop/index.tsx --bundle --platform=node --external:electron --outfile=./renderer-desktop/dist.js",
    "build-frame": "esbuild ./renderer-frame/index.ts --bundle --platform=node --external:electron --outfile=./renderer-frame/dist.js",
    "start": "DISPLAY=:1 electron .",
    "lint": "eslint .",
    "prettier": "prettier --write ."
  },
  "repository": "",
  "keywords": [],
  "author": "Will Nayes",
  "license": "MIT",
  "dependencies": {
    "electron": "^16.0.2",
    "electron-redux": "2.0.0-alpha.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "x11": "^2.3.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "electron-reloader": "^1.2.1",
    "esbuild": "^0.14.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "2.5.1",
    "type-fest": "^2.8.0",
    "typescript": "^4.5.4"
  }
}
