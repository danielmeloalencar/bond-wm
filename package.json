{
  "name": "electron-wm",
  "version": "1.0.0",
  "description": "An X Window Manager built on web technologies, including Electron and React.",
  "main": "./wm/main.js",
  "scripts": {
    "startx": "unset XDG_SEAT && Xephyr -br -ac -noreset -screen 1600x900 :1",
    "startx-multi": "unset XDG_SEAT && Xephyr -br -ac -noreset -screen 1000x700 -screen 1000x600 +xinerama :1",
    "build": "tsc -p ./tsconfig.json && npm run build-desktop && npm run build-frame",
    "build-desktop": "esbuild ./renderer-desktop/index.tsx --bundle --platform=node --external:electron --outfile=./renderer-desktop/dist.js",
    "build-frame": "esbuild ./renderer-frame/index.ts --bundle --platform=node --external:electron --outfile=./renderer-frame/dist.js",
    "start": "DISPLAY=:1 electron .",
    "lint": "eslint .",
    "prettier": "prettier --write ."
  },
  "repository": "https://github.com/wnayes/electron-wm",
  "keywords": [
    "X11",
    "window manager"
  ],
  "author": "Will Nayes",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^1.7.2",
    "electron": "^17.0.0",
    "electron-redux": "2.0.0-alpha.9",
    "keysym": "^0.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "x11": "^2.3.0",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "electron-reloader": "^1.2.2",
    "esbuild": "^0.14.18",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "2.5.1",
    "type-fest": "^2.11.1",
    "typescript": "^4.5.5"
  }
}
