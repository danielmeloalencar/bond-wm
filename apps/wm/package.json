{
  "name": "electron-wm",
  "version": "0.1.2",
  "description": "An X Window Manager built on web technologies, including Electron and React.",
  "main": "./index.js",
  "repository": "https://github.com/wnayes/electron-wm",
  "keywords": [
    "X11",
    "window manager"
  ],
  "author": "Will Nayes",
  "license": "MIT",
  "bin": {
    "electron-wm": "./bin/electron-wm"
  },
  "scripts": {
    "start": "DISPLAY=:1 electron .",
    "build": "tsc -b ./tsconfig.json && esbuild ./preload.ts --bundle --packages=external --outfile=./dist/preload.js && ./scripts/generate-version-json.mjs",
    "clean": "rm -rf ./dist ./node_modules"
  },
  "dependencies": {
    "@electron-wm/keysym": "workspace:*",
    "@electron-wm/shared": "workspace:*",
    "@electron-wm/tsconfig": "workspace:*",
    "@reduxjs/toolkit": "^1.9.1",
    "@swc/core": "^1.3.94",
    "electron": "^28.0.0",
    "electron-redux": "2.0.0-alpha.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-redux": "^8.0.5",
    "redux": "^4.2.0",
    "tslib": "^2.4.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.2",
    "x11": "^2.3.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/yargs": "^17.0.15",
    "electron-reloader": "^1.2.3",
    "esbuild": "^0.16.12",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "type-fest": "^3.3.0"
  }
}
